@model IEnumerable<Domain.Entities.Film>

@{
    ViewData["Title"] = "Films";
}

<div class="text-center">
    @*<h1 class="display-4">Welcome</h1>*@
    @if (User.IsInRole("admin"))
    {
        <a asp-controller="Film" asp-action="CreateFilm">Create a new film</a>
        <a asp-controller="Cinema" asp-action="CreateCinema">Create a new cinema</a>
    }

</div>

<p>
    <h1>Film list:</h1>
</p>

<table class="table align-content-center">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                Film Name
            </th>
        </tr>
        @*<th></th>*@
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Name)*@
                        @item.Name
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
